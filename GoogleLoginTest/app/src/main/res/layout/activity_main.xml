<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.googlelogintest.MainActivity"
    android:background="#3e525b">

    <ViewFlipper
        android:layout_width="match_parent"
        android:id="@+id/flipper"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_height="270sp"
        android:layout_below="@+id/iconImage"
        android:layout_above="@+id/googleSignIn_button"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="30sp">

    </ViewFlipper>

    <TextView
        android:text="Read World"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32sp"
        android:id="@+id/appTitle"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@color/common_action_bar_splitter"
        android:id="@+id/iconImage"
        android:layout_below="@+id/appInfoText"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="20sp"
        android:layout_width="60sp"
        android:layout_height="60sp" />

    <Button
        android:text="@string/guest_button"
        android:layout_width="300sp"
        android:id="@+id/guest"
        android:elevation="0dp"
        android:textColor="#feffffff"
        android:textStyle="bold"
        android:layout_marginBottom="34dp"
        android:backgroundTint="#485f6a"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/googleSignIn_button" />

    <com.google.android.gms.common.SignInButton
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/googleSignIn_button"
        android:filterTouchesWhenObscured="false"
        android:textAlignment="center"

        android:layout_marginBottom="10dp"
        android:layout_above="@+id/guest"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.common.SignInButton>

    <TextView
        android:text="The fastest way to find bookstore U want"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appInfoText"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/appTitle"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
